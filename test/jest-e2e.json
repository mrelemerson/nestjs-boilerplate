{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^~/(.*)$": "<rootDir>/../src/$1",
    "^~Converters/(.*)$": "<rootDir>/../src/common/converters/$1",
    "^~Helpers/(.*)$": "<rootDir>/../src/common/helpers/$1"
  }
}
